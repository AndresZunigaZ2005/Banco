package co.edu.uniquindio.pr2.controller;

import javafx.fxml.FXML;

import javafx.scene.control.Button;

import javafx.scene.control.TextField;
import co.edu.uniquindio.pr2.Exceptions.*;
import co.edu.uniquindio.pr2.model.*;
import javafx.event.ActionEvent;

import javafx.scene.control.ChoiceBox;

public class RegistrarClienteViewController {
	@FXML
	private ChoiceBox<String> choiceBoxEstrato;
	@FXML
	private TextField txtFieldCedula;
	@FXML
	private TextField txtFieldApellido;
	@FXML
	private TextField txtFieldNombre;
	@FXML
	private Button btnAgregarCliente;

	// Event Listener on Button[#btnAgregarCliente].onAction
	@FXML
	public void agregarCliente(ActionEvent event) {

	}

	public Cliente aniadirClienteLista() throws ClienteException{
		try {
			ClienteNatural nuevoCliente = new ClienteNatural(txtFieldNombre.getText(),
					txtFieldApellido.getText(), txtFieldCedula.getText(), null);
		} catch (ClienteException e) {
			throw new  ClienteException("Ingrese un dato válido");
		}
	}
}
